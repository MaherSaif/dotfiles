#!/bin/sh

git init

cat <<EOF > .gitignore
.DS_Store
coverage
.*.swp
EOF
echo '*.log'       > log/.gitignore
echo '!.gitignore' > tmp/.gitignore
echo '*.sqlite3'   > db/.gitignore
echo 'app'         > doc/.gitignore

find . -type d -empty -exec touch {}/.gitignore \;

git add .
git commit -a -m "Initial import."
